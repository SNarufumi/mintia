<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titile %>
    <%= f.text_field :titile %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label :interest_list, "興味・関心（カンマ区切り）" %><br>
    <%= text_field_tag 'post[interest_list]', @post.interest_list.join(',') %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
